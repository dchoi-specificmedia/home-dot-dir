# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

if [ `type -t __git_ps1` ]; then
    GITPS1='`__git_ps1`'
fi

# Bash Prompt
PS1='\[\e[1;33m\]\t \u@\h:`pwd`'$GITPS1' [\!]\[\e[0m\] $ '
PS2='> '

# User created aliases
alias ls='ls -G'
alias ll='ls -al'

export HISTCONTROL=ignoreboth
export HISTIGNORE="&:clear:l[ls]:[bf]g:exit"
