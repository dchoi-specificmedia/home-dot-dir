# This is an awesome status bar http://www.karan.org/blog/index.php/2010/01/06/this-is-my-screenrc-whats-yours
caption string "%?%F%{= Bk}%? %C%A %D %d-%m-%Y %{= kB} %t%= %?%F%{= Bk}%:%{= wk}%? %n "
hardstatus alwayslastline
hardstatus string '%{= g}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %D %d/%m%{W}%C %A %{g}]'

# 2^16 lines
defscrollback 65536
vbell off

# Some preset screens to load
# screen -t 'mysql' mysql 

screen
